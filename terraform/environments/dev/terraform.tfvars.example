# Example terraform.tfvars for Development Environment
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region  = "ap-south-1"
aws_profile = "sid-clouc-user"

# Project Configuration
project_name = "aws-learning"
owner_email  = "your-email@example.com"
cost_center  = "learning"

# Networking Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["ap-south-1a", "ap-south-1b"]
enable_nat_gateway = false # Cost optimization for dev
instance_type      = "t3.micro"

# S3 Storage Configuration
s3_bucket_purpose      = "application-data"
s3_enable_versioning   = true
s3_enable_encryption   = true
s3_kms_key_id          = null # Use AES256 encryption for dev
s3_block_public_access = true

# S3 Lifecycle Configuration
s3_lifecycle_enabled                      = true
s3_expiration_days                        = 30
s3_noncurrent_version_expiration_days     = 30
s3_abort_incomplete_multipart_upload_days = 7

# S3 Additional Tags
s3_additional_tags = {
  Purpose      = "Development Application Data"
  BackupPolicy = "Standard"
  DataClass    = "Internal"
  Team         = "Development"
  Project      = "AWS Learning"
}

